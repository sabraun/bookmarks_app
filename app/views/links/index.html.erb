<% provide(:title, 'Listing links') %>
<h1>Listing links</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Name</th>
    <th>DateSaved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.URL %></td>
    <td><%= link.name %></td>
    <td><%= link.dateSaved %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Link', new_link_path %>
